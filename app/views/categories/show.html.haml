%p#notice= notice

%p
  %h1
    = category.name

%p
  %h2= 'Products in this category:'
  %h4
    %ul   
    - category.products.each do |product|
      %li
        = link_to product.title, category_product_path(product.category, product), class: 'bg-info'
        - if current_user == product.user
          = link_to 'Edit', edit_category_product_path(category.id, product.id), class: 'btn btn-info btn-xs'
      %br


%p
%hr


- if user_signed_in?
  %h4 Add new product:
  = render 'products/form'
  %br
  %br
  = link_to 'Edit', edit_category_path(category), class: 'btn btn-info'
  \|
= link_to 'Back', categories_path, class: 'btn btn-primary'
